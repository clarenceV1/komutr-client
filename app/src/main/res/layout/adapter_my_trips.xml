<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/my_trips_bg"
        android:orientation="vertical">

        <!--票价、日期-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/tvMyTripsDate"
                style="@style/my_trips_text_style"
                android:text="11/9/2018" />


            <TextView
                android:id="@+id/tvMyTripsTime"
                style="@style/my_trips_text_style"
                android:layout_marginLeft="10dp"
                android:text="6:23pm" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvMyTripsStatus"
                style="@style/my_trips_text_style"
                android:layout_marginLeft="10dp"
                android:text="Has Use"
                android:textSize="16sp" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/color_side_line" />


       <!--行程-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">


             <TextView
                 android:id="@+id/tvBusNumber"
                 style="@style/my_trips_text_style"
                 android:drawablePadding="10dp"
                 android:drawableLeft="@drawable/bus_icon"
                 android:text="A192"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/bus_path_icon"/>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvStartLocation"
                    style="@style/my_trips_text_style"
                    android:layout_marginTop="3dp"
                    android:text="Heron Bay"/>


                <TextView
                    android:id="@+id/tvEndLocation"
                    style="@style/my_trips_text_style"
                    android:layout_marginTop="13dp"
                    android:text="Suntec Tower 5"/>


            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/color_side_line" />




        <!--票价-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                style="@style/my_trips_text_style"
                android:text="@string/ticket_price"
                android:textSize="12sp"/>


            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvTicketPrice"
                style="@style/my_trips_text_style"
                android:layout_marginLeft="10dp"
                android:text="1Ticket ₱ 21.00"
                android:textSize="17sp" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>