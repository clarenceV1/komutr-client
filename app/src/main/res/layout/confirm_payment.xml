<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ffffff"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/color_main">


            <TextView
                style="@style/title_text_style"
                android:layout_centerInParent="true"
                android:text="@string/confirm_payment"/>


            <ImageView
                android:id="@+id/ivClosePage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shutdown"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:layout_alignParentRight="true"/>



        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="26dp">


            <TextView
                style="@style/my_trips_text_style"
                android:textColor="@color/color_main"
                android:text="â‚±"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tvBusPrice"
                style="@style/my_trips_text_style"
                android:textColor="@color/color_000000"
                android:layout_marginLeft="7dp"
                android:text="10"
                android:textSize="30sp" />


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/color_666666"
            android:layout_marginTop="19dp"
            android:textSize="15sp"
            android:text="@string/payment_amount"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:background="@color/color_side_line"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_666666"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="23dp"
            android:textSize="15sp"
            android:text="@string/payment_method"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_666666"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="23dp"
            android:textSize="15sp"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/pay_icon"
            android:text="@string/payment_method"/>



        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>




        <Button
            android:id="@+id/btnPay"
            style="@style/button_style"
            android:textAllCaps="true"
            android:enabled="true"
            android:layout_margin="0dp"
            android:gravity="center"
            android:background="@drawable/button_rectangle_bg"
            android:text="@string/pay" />

    </LinearLayout>
</layout>